%div(class="row")
	%div(id="" class="twelve columns")
		%h3 Wish List
		%form(method='POST' action='' id='wish_list')
			-site_list.each do |site_id, sites_group|
				%div(class="four columns")
					%label(for="#{site_id}" class="secondary button")
						= sites_group['P_name']
					%input(type="checkbox" name="#{site_id}" id="#{site_id}" value="#{site_id}")
			%div(class="twelve columns")
				%input(type="submit" value="Save" class="button")
		%div(class='wish_list_errors alert-box twelve columns')
