%html(class="no-js" lang="en")
	%head
		%title Delhi Travel Itinerary
		%meta(charset="utf-8")
		%meta(name="viewport" content="width=device-width")
		
		/js libs
		%script(type="text/javascript" src= "http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js")
		%script(type="text/javascript" src="./js/foundation.min.js")
		%script(type="text/javascript" src="./js/app.js")
		%script(type="text/javascript" src= "./js/jquery.cookie.js")
		%script(type="text/javascript" src= "./js/jquery.handleStorage.min.js")
		
		/google maps api
		%script(type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false")
		
		
		/functionality
		
		%script(type="text/javascript" src= "./js/functionality.js")
		
		/css
		%link(rel="stylesheet" type="text/css" href="./css/foundation.min.css")
		%link(rel="stylesheet" type="text/css" href="./css/app.css")
	%body()
		= yield
		/maps 
		%div(id="map_canvas" style="position: absolute; top: 0; bottom: 0; left: 0; right: 0; z-index: 0;")
